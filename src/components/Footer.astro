---
// Import the favicon logo for footer
import logo from '../assets/favicon.png'
---

<!-- Footer -->
<footer class="bg-neutral-900 text-white py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid md:grid-cols-3 gap-8">
      <div>
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-8 h-8">
            <img src={logo.src} alt="Tugang Cafe Logo" class="w-full h-full object-cover rounded-full border border-white/30" />
          </div>
          <span style="font-family: var(--font-script);" class="text-xl font-semibold text-white">Tugang Cafe</span>
        </div>
        <p class="text-gray-200 mb-4 font-medium">Every cup is a celebration of togetherness ☕</p>
        <p class="text-sm text-gray-300">2.3K followers • 35 following<br>100% recommend (9 Reviews)</p>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-white text-lg">Quick Links</h4>
        <ul class="space-y-3 text-gray-200">
          <li><a href="#home" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1">Home</a></li>
          <li><a href="#about" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1">About</a></li>
          <li><a href="#menu" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1">Menu</a></li>
          <li><a href="#gallery" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1">Gallery</a></li>
          <li><a href="#contact" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1">Contact</a></li>
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4 text-white text-lg">Contact Info</h4>
        <div class="space-y-3 text-gray-200">
          <p class="flex items-start gap-2">
            <span class="text-lg" aria-hidden="true">📍</span>
            <span>PGRC Building, Camia St. Pembo, Taguig</span>
          </p>
          <p class="flex items-center gap-2">
            <span class="text-lg" aria-hidden="true">📞</span>
            <a href="tel:270006233" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1">270006233</a>
          </p>
          <p class="flex items-start gap-2">
            <span class="text-lg" aria-hidden="true">🌐</span>
            <a href="https://tugang-cafe-2.jimdosite.com" target="_blank" rel="noopener noreferrer" class="hover:text-white hover:underline transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded px-1 break-all">tugang-cafe-2.jimdosite.com</a>
          </p>
          <div class="pt-2">
            <h5 class="font-medium text-white mb-2">Follow Us</h5>
            <div class="flex gap-3">
              <a href="https://instagram.com/tugangcafe_" target="_blank" rel="noopener noreferrer" 
                 class="text-gray-200 hover:text-white transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded p-1"
                 aria-label="Follow us on Instagram">
                <span class="text-xl">📷</span>
              </a>
              <a href="https://tiktok.com/@tugangcafe" target="_blank" rel="noopener noreferrer" 
                 class="text-gray-200 hover:text-white transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-opacity-50 rounded p-1"
                 aria-label="Follow us on TikTok">
                <span class="text-xl">🎵</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-300">
      <p class="text-sm">&copy; 2025 Tugang Cafe. All rights reserved. Made with <span class="text-red-400" aria-hidden="true">❤️</span> for our community.</p>
    </div>
  </div>
</footer>