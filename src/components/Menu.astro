  .menu-card:hover .text-tugang-primary {
    color: var(--tugang-dark) !important;
    font-weight: 700;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.menu-tab');
    const categories = document.querySelectorAll('.menu-category');

    // Intersection Observer for scroll-triggered stagger animation
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
      entries.forEach(function(entry) {
        if (entry.isIntersecting) {
          const menuGrid = entry.target;
          const menuCards = menuGrid.querySelectorAll('.menu-card');
          
          // Only animate if not already animated
          const firstCard = menuCards[0];
          if (firstCard && !firstCard.classList.contains('animate-in')) {
            menuCards.forEach(function(card, index) {
              card.classList.add('stagger-hidden');
              setTimeout(function() {
                card.classList.remove('stagger-hidden');
                card.classList.add('animate-in');
              }, index * 100);
            });
          }
          
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Observe all menu grids
    const menuGrids = document.querySelectorAll('.menu-grid');
    menuGrids.forEach(function(grid) {
      observer.observe(grid);
    });

    // Tab functionality
    tabs.forEach(function(tab) {
      tab.addEventListener('click', function() {
        // Remove active class from all tabs
        tabs.forEach(function(t) {
          t.classList.remove('active', 'bg-tugang-primary', 'text-white');
          t.classList.add('bg-white', 'text-tugang-primary');
        });

        // Add active class to clicked tab
        tab.classList.add('active', 'bg-tugang-primary', 'text-white');
        tab.classList.remove('bg-white', 'text-tugang-primary');

        // Hide all categories
        categories.forEach(function(cat) {
          cat.classList.add('hidden');
        });

        // Show selected category
        const targetCategory = tab.getAttribute('data-category');
        const targetElement = document.getElementById(targetCategory);
        if (targetElement) {
          targetElement.classList.remove('hidden');

          // Ensure cards are visible first, then add stagger animation
          const menuCards = targetElement.querySelectorAll('.menu-card');
          menuCards.forEach(function(card) {
            card.classList.remove('animate-in', 'stagger-hidden');
            card.style.opacity = '1';
            card.style.transform = 'translateY(0) scale(1)';
          });

          // Add stagger animation after a brief delay
          setTimeout(function() {
            menuCards.forEach(function(card, index) {
              card.classList.add('stagger-hidden');
              setTimeout(function() {
                card.classList.remove('stagger-hidden');
                card.classList.add('animate-in');
              }, index * 80);
            });
          }, 100);
        }
      });
    });
  });
</script>

