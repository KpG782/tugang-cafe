---
import logo from '../assets/favicon.png'
---  
  
  
  
  <!-- Navigation -->
  <nav class="fixed top-0 w-full bg-white/95 backdrop-blur-sm shadow-cafe z-50 transition-all duration-300">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16 lg:h-20">
        <!-- Logo -->
        <div class="flex items-center space-x-3">
          <div class="w-8 h-8 lg:w-10 lg:h-10">
            <!-- Tugang Cafe Flower Logo -->
            <img src={logo.src} alt="Tugang Cafe Logo" class="w-full h-full object-cover rounded-full shadow-md" />
          </div>
          <span style="font-family: var(--font-script);" class="text-xl lg:text-2xl font-semibold text-tugang-primary">Tugang Cafe</span>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:flex items-center space-x-8">
          <a href="#home" class="text-neutral-700 hover:text-tugang-primary transition-colors duration-200 font-medium">Home</a>
          <a href="#about" class="text-neutral-700 hover:text-tugang-primary transition-colors duration-200 font-medium">About</a>
          <a href="#menu" class="text-neutral-700 hover:text-tugang-primary transition-colors duration-200 font-medium">Menu</a>
          <a href="#gallery" class="text-neutral-700 hover:text-tugang-primary transition-colors duration-200 font-medium">Gallery</a>
          <a href="#contact" class="text-neutral-700 hover:text-tugang-primary transition-colors duration-200 font-medium">Contact</a>
          <a href="tel:270006233" class="bg-coffee-gradient text-white px-6 py-2 rounded-full hover:shadow-warm transition-all duration-200 font-medium">
            Order Now
          </a>
        </div>

        <!-- Mobile menu button -->
        <button class="md:hidden text-tugang-primary p-2" id="mobile-menu-btn">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>

      <!-- Mobile Navigation -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t">
          <a href="#home" class="block px-3 py-2 text-neutral-700 hover:text-tugang-primary transition-colors">Home</a>
          <a href="#about" class="block px-3 py-2 text-neutral-700 hover:text-tugang-primary transition-colors">About</a>
          <a href="#menu" class="block px-3 py-2 text-neutral-700 hover:text-tugang-primary transition-colors">Menu</a>
          <a href="#gallery" class="block px-3 py-2 text-neutral-700 hover:text-tugang-primary transition-colors">Gallery</a>
          <a href="#contact" class="block px-3 py-2 text-neutral-700 hover:text-tugang-primary transition-colors">Contact</a>
          <a href="tel:270006233" class="block mx-3 mt-3 bg-coffee-gradient text-white px-4 py-2 rounded-full text-center">
            Order Now
          </a>
        </div>
      </div>
    </div>
  </nav>