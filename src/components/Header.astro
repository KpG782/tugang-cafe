        <div class="w-8 h-8 lg:w-10 lg:h-10 relative">
          <img src={logo.src} alt="Tugang Cafe Logo" class="w-full h-full object-cover rounded-full shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:rotate-12" />
          <div class="absolute inset-0 rounded-full bg-gradient-to-r from-tugang-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        <span style="font-family: var(--font-script);" class="text-xl lg:text-2xl font-semibold text-tugang-primary group-hover:text-tugang-dark transition-colors duration-300">Tugang Cafe</span>
